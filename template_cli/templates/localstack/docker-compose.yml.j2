version: '3.9'
services:
  localstack:
    image: localstack/localstack:4.7.0
    container_name: localstack
    ports:
      - "4566:4566"
      - "4510-4559:4510-4559"
    environment:
      - SERVICES={{ services }}
      - DEBUG=1
      - DATA_DIR=/tmp/localstack/data
    volumes:
      - ./volume:/var/lib/localstack
      - /var/run/docker.sock:/var/run/docker.sock
